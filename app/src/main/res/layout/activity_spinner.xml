<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SpinnerActivity">

    <TextView
        android:id="@+id/tvSelecionarCategoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleccionar una categoria" />

    <Spinner
        android:id="@+id/spnnCmbProductosCategoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvListaProductos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lista de productos" />

    <ListView
        android:id="@+id/lstProductos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvCantidadAPedir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cantidad a pedir" />

    <EditText
        android:id="@+id/edtProdCantidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0" />

    <Button
        android:id="@+id/btnProdAddPedido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar" />
</LinearLayout>